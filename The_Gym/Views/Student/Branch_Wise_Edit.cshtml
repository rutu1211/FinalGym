@model The_Gym.Models.StudentModel
@{ Layout = "~/Views/Shared/_CrudLayout.cshtml"; }
@{ <!-- Main content -->
                            <section class="content">
                                <div class="container-fluid">
                                    <!-- SELECT2 EXAMPLE -->
                                    <div class="card card-default">
                                        <div class="card-header">
                                            <h3 class="card-title">Add Student</h3>
                                        </div>
                                        <!-- /.card-header -->
                                        @using (Html.BeginForm("Branch_Wise_Edit", "Student", FormMethod.Post, new { @class = "" }))
                                        {
                            @Html.AntiForgeryToken()
                                            <div class="card-body" id="notification">
                                                <div style="text-align: center;"><b>Personal Information</b></div><br />

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Branch_ID)<span style="color: #FF0000;">*</span>
                                                            @Html.DropDownListFor(model => model.Branch_ID, new SelectList(ViewBag.Branch_Name, "ID", "Name"), "Select Branch", new { @class = "form-control select2", @style = "width: 100%;", @disabled = "disabled" })
