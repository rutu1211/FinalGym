                                                            @Html.ValidationMessageFor(model => model.Branch_ID, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.First_Name)<span style="color: #FF0000;">*</span>
                                                            @Html.TextBoxFor(model => model.First_Name, new { @class = "form-control", @placeholder = "First Name", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.First_Name, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                </div>
                                                <!-- /.row -->

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Last_Name)<span style="color: #FF0000;">*</span>
                                                            @Html.TextBoxFor(model => model.Last_Name, new { @class = "form-control", @placeholder = "Last Name", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.Last_Name, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Email_ID)<span style="color: #FF0000;">*</span>
                                                            @Html.TextBoxFor(model => model.Email_ID, new { @class = "form-control", @placeholder = "Email ID", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.Email_ID, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                </div>
                                                <!-- /.row -->

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.DOB)<span style="color: #FF0000;">*</span>
                                                            @Html.TextBoxFor(model => model.DOB, "{0:yyyy-MM-dd}", new { @class = "form-control", @placeholder = "Date Of Birth", @autocomplete = "off", @id = "DOB", @type = "date" })
                                                            @Html.ValidationMessageFor(model => model.DOB, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Trainer_ID)<span style="color: #FF0000;">*</span>
                                                            @Html.DropDownListFor(model => model.Trainer_ID, new SelectList(ViewBag.Trainer_NAME, "ID", "Full_Name"), "Select Trainer", new { @class = "form-control select2", @style = "width: 100%;", @id = "Trainer_ID" })
                                                            @Html.ValidationMessageFor(model => model.Trainer_ID, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                </div>
                                                <!-- /.row -->
                                                <!-- /.row -->
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Mobile)<span style="color: #FF0000;">*</span>
                                                            @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", @placeholder = "Concact No", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Emergency)<span style="color: #FF0000;">*</span>
                                                            @Html.TextBoxFor(model => model.Emergency, new { @class = "form-control", @placeholder = "Emergency Concact No", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.Emergency, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                </div>

                                                <!-- /.row -->
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Occupation)<span style="color: #FF0000;">*</span>
                                                            @Html.TextBoxFor(model => model.Occupation, new { @class = "form-control", @placeholder = "Occupation", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.Occupation, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Reference)
                                                            @Html.TextBoxFor(model => model.Reference, new { @class = "form-control", @placeholder = "Reference", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.Reference, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                </div>
                                                <!-- /.row -->

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Disease)
                                                            @Html.TextBoxFor(model => model.Disease, new { @class = "form-control", @placeholder = "Disease", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.Disease, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                </div>
                                                <!-- /.row -->

                                                <br />
                                                <div style="text-align: center;"><b>Residential Information</b></div><br />

                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            @Html.LabelFor(model => model.Building_Name)<span style="color: #FF0000;">*</span>
                                                            @Html.TextBoxFor(model => model.Building_Name, new { @class = "form-control", @placeholder = "Building Name", @autocomplete = "off" })
                                                            @Html.ValidationMessageFor(model => model.Building_Name, "", new { @class = "Validation_Message" })
                                                        </div>
                                                        <!-- /.form-group -->
                                                    </div>
                                                    <!-- /.col -->
                                                    <div class="col-md-6">
