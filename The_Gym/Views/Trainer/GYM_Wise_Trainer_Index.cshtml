@model List<The_Gym.Models.TrainerBranchModel>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
@{
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>SR NO</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Branch</th>
                            <th style="text-align:center;width:100px;">
                                Add row <button type="button" data-func="dt-add" class="btn btn-success btn-xs dt-add" onclick="location.href='@Url.Action("GYM_Wise_Trainer_Create", "Trainer")'">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                                </button>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ Int64 srno = new Int64();
                                        srno = 1; }

                        @foreach (var v in Model)
                        {
            <tr class="pointer even">
                <td>@srno</td>
                <td>@v.Trainer.First_Name</td>
                <td>@v.Trainer.Last_Name</td>
                <td>@v.Trainer.Email_ID</td>
                <td>@v.Branch.Name</td>
                <td>
                    <button type="button" class="btn btn-primary btn-xs dt-edit" style="margin-right:6px;" onclick="location.href = '@Url.Action("GYM_Wise_Trainer_Edit", "Trainer", new { ID = v.Trainer.ID })'" data-toggle="tooltip" data-placement="top" title="Edit">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-danger btn-xs dt-delete" style="margin-right:6px;" value=@v.Trainer.ID data-toggle="tooltip" data-placement="top" title="Delete">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-success btn-xs dt-view" data-toggle="tooltip" data-placement="top" title="View" onclick="location.href = '@Url.Action("ManagerView", "Trainer", new { ID = v.Trainer.ID })'" @*data-toggle="modal" data-target="#exampleModalCenter"*@>
                        <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                    </button>
                </td>
            </tr>                srno += 1;
                        }
                    </tbody>
                </table> }
@section Scripts{
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.buttons.min.js"></script>
    <script src="~/Scripts/buttons.colVis.min.js"></script>
    <script src="~/Scripts/buttons.html5.min.js"></script>
    <script src="~/Scripts/buttons.print.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/buttons.bootstrap.min.js"></script>
    <script src="~/Scripts/jszip.min.js"></script>
    <script src="~/Scripts/pdfmake.min.js"></script>
    <script src="~/Scripts/vfs_fonts.js"></script>

    <script>
        $(document).ready(function () {
            // DataTable initialisation
            $('#example').DataTable(
                {
                    "dom": '<"dt-buttons"Bf><"clear">lirtp',
                    "paging": true,
                    "autoWidth": true,
                    "columnDefs": [
                        {
                            "orderable": false, "targets": 5
                        }
                    ],
                    "buttons": [
                        'colvis',
                        'copyHtml5',
                        'csvHtml5',
                        'excelHtml5',
                        'pdfHtml5',
                        'print'
                    ]
                }
            );

            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })

            //Delete buttons
            $('.dt-delete').each(function () {
                $(this).on('click', function (evt) {
                    if (confirm("Are you sure to delete this row?")) {
                        $this = $(this);
                        var dtRow = $this.parents('tr');
                        var table = $('#example').DataTable();
                        table.row(dtRow[0].rowIndex - 1).remove().draw(false);

                        // initiate variables with form content
                        $.ajax({
                            type: "GET",
                            url: "/Trainer/Trainer_Delete/",
                            data: "ID=" + $(this).val(),
                            success: function (text) {
                                if (text == "success") {
                                    console.log("sucess");
                                } else {
                                    console.log("error");
                                }
                            }
                        });
                    }
                });
            });

            $('#myModal').on('hidden.bs.modal', function (evt) {
                $('.modal .modal-body').empty();
            });
        });
    </script>
}