@{
                <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th>SR NO</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Members</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ Int64 srno = new Int64();
                                        srno = 1; }

                        @foreach (var v in Model)
                        {
            <tr class="pointer even">
                <td>@srno</td>
                <td>@v.Trainer.First_Name</td>
                <td>@v.Trainer.Last_Name</td>
                <td>@v.Trainer.Email_ID</td>
                <td><a href="@Url.Action("Trainer_Wise_Index","Student", new { ID = v.Trainer.ID })" data-toggle="tooltip" data-placement="top" title="View Student">@v.Total.Student</a></td>
            </tr>srno += 1;
                        }
                    </tbody>
                </table> <!-- Modal -->
                                        <div id="myModal" class="modal fade" role="dialog">
                                            <div class="modal-dialog">

                                                <!-- Modal content-->
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                                        <h4 class="modal-title">Row information</h4>
                                                    </div>
                                                    <div class="modal-body">

                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                    </div>
                                                </div>

                                            </div>
                                        </div> }
