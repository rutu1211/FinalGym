@model List<The_Gym.Models.TrainerTotalModel>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<div class="row">
    <div class="col-lg-6 col-xl-4">
        <div class="card mb-3 widget-content">
            <div class="widget-content-wrapper">
                <div class="widget-content-left">
                    <div class="widget-heading">Total Members</div>
                    @*<div class="widget-subheading">Total Clients Profit</div>*@
                </div>
                <div class="widget-content-right">
                    <div class="widget-numbers text-primary"><span>@ViewBag.Total_Student</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xl-4">
        <div class="card mb-3 widget-content">
            <div class="widget-content-wrapper">
                <div class="widget-content-left">
                    <div class="widget-heading">Total Trainer</div>
                    @*<div class="widget-subheading">Total revenue streams</div>*@
                </div>
                <div class="widget-content-right">
                    <div class="widget-numbers text-success"><span>@ViewBag.Total_Trainer</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xl-4">
        <div class="card mb-3 widget-content">
            <div class="widget-content-wrapper">
                <div class="widget-content-left">
                    <div class="widget-heading">Unpaid Members</div>
                    @*<div class="widget-subheading">Total revenue streams</div>*@
                </div>
                <div class="widget-content-right">
                    <div class="widget-numbers text-warning"><span>@ViewBag.Student_Fee</span></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-xl-4">
        <a href="@Url.Action("Today_Joining","Demo", new { ID = Session["Branvch_ID"] })">
            <div class="card mb-3 widget-content">
                <div class="widget-content-wrapper">
                    <div class="widget-content-left">
                        <div class="widget-heading">Today Joining</div>
                        @*<div class="widget-subheading">People Interested</div>*@
                    </div>
                    <div class="widget-content-right">
                        <div class="widget-numbers text-danger"><span>@ViewBag.Today_Joining</span></div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-6 col-xl-4">
        <a href="@Url.Action("Branch_Wise_Plane","Plane", new { ID = Session["Branvch_ID"] })">
            <div class="card mb-3 widget-content">
                <div class="widget-content-wrapper">
                    <div class="widget-content-left">
                        <div class="widget-heading">Total Active Plans</div>
                        <div class="widget-subheading">@*People Interested*@</div>
                    </div>
                    <div class="widget-content-right">
                        <div class="widget-numbers text-danger"><span>@ViewBag.Total_Plane</span></div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-6 col-xl-4">
        <a href="@Url.Action("Branch_Wise_Offer","Offer", new { ID = Session["Branvch_ID"] })">
            <div class="card mb-3 widget-content">
                <div class="widget-content-wrapper">
                    <div class="widget-content-left">
                        <div class="widget-heading">Total Active Offers</div>
                        <div class="widget-subheading">@*People Interested*@</div>
                    </div>
                    <div class="widget-content-right">
                        <div class="widget-numbers text-danger"><span>@ViewBag.Total_Offer</span></div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>

<div style="text-align: center"> <h1> <b> Trainer List </b> </h1> </div>

<link rel="stylesheet" href="~/Content/dataTables.bootstrap.min.css">
